            {/* 上一级目录卡片 - 仅在浏览目录时显示 */}
            {!tagFilter && pathSegments.length > 0 && (
              <a href={`/articles/${pathSegments.length > 1 ? pathSegments.slice(0, -1).join('/') : ''}/${view}`} 
